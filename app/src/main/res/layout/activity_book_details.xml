<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".Activities.BookDetailsActivity">
    <ImageView
        android:id="@+id/detail_image_book"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/detail_image_book"
        app:layout_constraintBottom_toTopOf="@id/btnGetBook"
        >
        <TextView
            android:id="@+id/textNameLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            app:layout_constraintTop_toBottomOf="@+id/detail_image_book"

            ></TextView>
        <TextView
            android:id="@+id/textName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            app:layout_constraintTop_toBottomOf="@+id/textNameLabel"
            android:textSize="25dp"
            ></TextView>
        <TextView
            android:id="@+id/textTopicLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Topic"
            app:layout_constraintTop_toBottomOf="@+id/textName"

            ></TextView>
        <TextView
            android:id="@+id/textTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Topic"
            android:textSize="25dp"
            app:layout_constraintTop_toBottomOf="@+id/textTopicLabel"

            ></TextView>
        <TextView
            android:id="@+id/textAuthorsLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Authors"
            app:layout_constraintTop_toBottomOf="@+id/textTopic"

            ></TextView>
        <TextView
            android:id="@+id/textAuthors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Authors"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@+id/textAuthorsLabel"

            ></TextView>
    </LinearLayout>

    <Button
        android:id="@+id/btnGetBook"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="10dp"
        android:text="Contact with owner"/>
</androidx.constraintlayout.widget.ConstraintLayout>